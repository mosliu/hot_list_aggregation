# 热榜聚合智能体环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/hot_list_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# OpenAI API配置
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# =============================================================================
# API服务配置
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}

# =============================================================================
# 并发和性能配置
# =============================================================================
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY=1

# =============================================================================
# 任务调度配置
# =============================================================================
# 新闻处理任务间隔（分钟）
NEWS_PROCESSING_INTERVAL=10

# 事件聚合任务间隔（分钟）
EVENT_AGGREGATION_INTERVAL=30

# 标签分析任务间隔（小时）
LABELING_TASK_INTERVAL=1

# 数据清理任务时间（小时:分钟）
CLEANUP_TASK_TIME=02:00

# =============================================================================
# 业务配置
# =============================================================================
# 批处理大小
NEWS_BATCH_SIZE=100
EVENT_BATCH_SIZE=50
LABELING_BATCH_SIZE=20

# 排除的新闻类型（逗号分隔）
EXCLUDED_NEWS_TYPES=娱乐,体育,游戏

# 事件聚合回溯天数
EVENT_LOOKBACK_DAYS=7

# 历史关联分析天数
HISTORY_RELATION_DAYS=30

# 最小置信度阈值
MIN_CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# 缓存配置（可选）
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# =============================================================================
# 监控配置（可选）
# =============================================================================
# ENABLE_METRICS=true
# METRICS_PORT=9090

# =============================================================================
# 安全配置
# =============================================================================
# API密钥（用于API访问控制，可选）
# API_SECRET_KEY=your_secret_key_here

# CORS配置
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# 开发环境配置
# =============================================================================
# 开发模式（启用调试功能）
DEBUG=false

# 自动重载（仅开发环境）
AUTO_RELOAD=false

# 测试数据库（可选）
# TEST_DATABASE_URL=mysql+pymysql://test_user:test_pass@localhost:3306/test_hot_list_db

# =============================================================================
# 外部服务配置（预留）
# =============================================================================
# Kafka配置（未来扩展）
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_TOPIC_NEWS=news_topic
# KAFKA_TOPIC_EVENTS=events_topic

# Elasticsearch配置（未来扩展）
# ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_INDEX_NEWS=news_index
# ELASTICSEARCH_INDEX_EVENTS=events_index

# =============================================================================
# 邮件通知配置（可选）
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAILS=admin@yourdomain.com,ops@yourdomain.com

# =============================================================================
# 文件存储配置（可选）
# =============================================================================
# 本地文件存储路径
# FILE_STORAGE_PATH=./storage

# 对象存储配置（如阿里云OSS、AWS S3等）
# OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your_access_key_id
# OSS_ACCESS_KEY_SECRET=your_access_key_secret
# OSS_BUCKET_NAME=your_bucket_name